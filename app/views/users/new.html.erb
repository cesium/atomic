<div class="breadcrumb-wrap">
  <div class="container">
    <div class="row">
      <div class="col-sm-6">
        <h4>Sign Up</h4>
      </div>
      <div class="col-sm-6 hidden-xs text-right">
        <ol class="breadcrumb">
          <li>
            <%= link_to 'Home', root_path %>
          </li>
          <li>
            Sign up
          </li>
        </ol>
      </div>
    </div>
  </div>
</div>
<div class="divide80">
</div>
<div class="container">
  <div class="row">
    <div class="col-md-8 col-sm-8 col-md-offset-2 col-sm-offset-2">
      <div class="login-form">
        <h3>
          Sign up
        </h3>
        <%= form_for @user do |form| %>
        <%= render partial: '/users/form', object: form%>
        <div class = "form-group">
        <%=form label :name%>
        <%=form text_field :name, class: 'form-control', placeholder: 'O teu nome'%>
        </div>
        <div class = "form-group">
        <%= form label :account_number%>
        <%= form text_field :account_number, class: 'form-control', placeholder: 'Número de sócio'%>
        </div>
        </div>
        <div class = "form-group">
        <%= form label :student_id%>
        <%= form text_field :student_id, class: 'form-control', placeholder: 'Número de aluno'%>
        </div>
        <div class = "form-group">
        <%= form label :city%>
        <%= form text_field :city, class: 'form-control', placeholder: 'Onde vives?'%>
        </div>
        <div class = "form-group">
        <%= form label :phone_number%>
        <%= form text_field :phone_number, class: 'form-control'%>
        </div>
        <div class = "form-group">
        <%= form label :birthdate%>
        <%= form date_select :birthdate, prefix: :birthdate%>
        </div>
        <div class = "submit field">
        <%=form submit 'Entrar' , class: 'btn btn-theme-bg'%>
        <%=link_to 'Já estou registado', sign_in_path%>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="divide60">
</div>