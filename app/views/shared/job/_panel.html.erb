<div class="row post-group-info left-padding">
  <div class="col-md-12">
    <div class="post-info">
      <p class="lead">
        <i class="fa fa-fw fa-building small-right-padding">
        </i><%= @job.company %>
      </p>
    </div>
    <% if !@job.location.blank?
 %>
    <div class="post-info">
      <p class="lead">
        <i class="fa fa-fw fa-map-marker-alt small-right-padding">
        </i><%= @job.location %>
      </p>
    </div>
  <% end %></div>
<div class="col-md-7">
  <div class="post-info">
    <p class="lead">
      <i class="fa fa-fw fa-link small-right-padding">
      </i><%= link_to(@job.link, @job.link, :target => "_blank") %>
    </p>
  </div>
</div>
<% if !@job.contact.blank?
 %>
<div class="col-md-7">
  <div class="post-info">
    <p class="lead">
      <i class="fa fa-fw fa-envelope small-right-padding">
      </i><%= mail_to(@job.contact, @job.contact) %>
    </p>
  </div>
</div>
<% end %>
<div class="col-md-7">
  <div class="post-info">
    <p class="lead">
      <i class="fa fa-fw fa-calendar small-right-padding">
      </i><%= @job.created_at.to_date %>
    </p>
  </div>
</div>
</div>