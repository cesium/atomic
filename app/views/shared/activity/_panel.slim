.panel-group

  // Location
  = render partial: "shared/activity/info",
    locals: { icon: "map-marker", text: @activity.location }

  // Date & Time
  - if @activity.start_date.to_date == @activity.end_date.to_date
    = render partial: "shared/activity/info",
      locals: { \
      icon: "calendar",
      text: "#{l @activity.start_date.to_date}" \
      }
    = render partial: "shared/activity/info",
      locals: { \
      icon: "clock-o", \
      text: "#{l @activity.start_date.time} - #{l @activity.end_date.time}" \
      }
  - else
    = render partial: "shared/activity/info",
      locals: { \
      icon: "calendar", \
      text: "#{l @activity.start_date.to_date}" \
      }
    = render partial: "shared/activity/info",
      locals: { \
      icon: "clock-o", \
      text: "#{l @activity.start_date.time}" \
      }
    = render partial: "shared/activity/info",
      locals: { \
      icon: "calendar", \
      text: "#{l @activity.end_date.to_date}" \
      }
    = render partial: "shared/activity/info",
      locals: { \
      icon: "clock-o", \
      text: "#{l @activity.end_date.time}" \
      }

  // Member Cost
  - if @activity.member_cost != 0
    = render partial: "shared/activity/info",
      locals: { icon: "money", text: "#{@activity.member_cost}€ / Sócio" }

  // Guest Cost
  - if @activity.guest_cost != 0
    = render partial: "shared/activity/info",
      locals: { icon: "money", text: "#{@activity.guest_cost}€ / Não Sócio" }

  // Coffe Break
  - if @activity.coffee_break
    = render partial: "shared/activity/info",
      locals: { icon: "coffee", text: "Coffee Break" }

  // Rating
  - if @activity.total_rating != nil
    = render partial: "shared/activity/info",
      locals: { icon: "start", text: @activity.total_rating }
