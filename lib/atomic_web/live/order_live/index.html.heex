<main class="flex items-center justify-center">
  <section aria-labelledby="recent-heading" class="mt-16 w-full">
    <div class="flex justify-center">
      <div class="w-full space-y-8 sm:w-3/4 md:w-2/3 lg:w-screen xl:w-screen">
        <%= for order <- @orders do %>
          <%= if @current_user && @current_user.id == order.user_id do %>
            <%= if order.status != :draft && order.status != :canceled do %>
              <div class="w-full border-t border-b border-gray-200 bg-white shadow-sm sm:border">
                <h3 class="sr-only">
                  Order placed on <time datetime="2021-07-06">Jul 6, 2021</time>
                </h3>

                <div class="flex flex-col items-center border-b border-gray-200 p-4 sm:flex-row sm:p-6">
                  <dl class="grid flex-1 grid-cols-1 grid-rows-3 lg:grid-cols-3 lg:grid-rows-2 xl:grid-cols-3 xl:grid-rows-2">
                    <div class="flex flex-col items-center">
                      <%= if @current_user do %>
                        <dt class="font-semibold uppercase">Order User</dt>
                        <dd class="mt-1"><%= @current_user.email %></dd>
                      <% end %>
                    </div>
                    <div class="flex flex-col items-center">
                      <dt class="font-semibold uppercase">Date placed</dt>
                      <dd class="mt-1">
                        <time datetime=""><%= NaiveDateTime.to_string(order.inserted_at) %></time>
                      </dd>
                    </div>
                    <div class="flex flex-col items-center">
                      <dt class="font-semibold uppercase">Total amount</dt>
                      <%= if @current_user.partnership do %>
                        <dd class="mt-1"><%= total_price_with_partnership(order) %> €</dd>
                      <% else %>
                        <dd class="mt-1"><%= total_price(order) %> €</dd>
                      <% end %>
                    </div>
                  </dl>

                  <div class="flex lg:col-span-2 lg:flex lg:items-center lg:justify-end lg:space-x-4">
                    <%= draw_qr_code(order) |> raw %>
                  </div>
                </div>
                <!-- Products -->
                <h4 class="sr-only">Items</h4>
                <ul role="list" class="divide-y divide-gray-200">
                  <%= for product <- order.products do %>
                    <li class="p-4 sm:p-6">
                      <div class="flex flex-col items-center sm:flex-row sm:items-center">
                        <div class="mb-4 h-20 w-full flex-shrink-0 overflow-hidden rounded-lg bg-gray-200 sm:mr-6 sm:mb-0 sm:h-40 sm:w-20">
                          <%= if product.image  != nil do %>
                            <img src={Uploaders.ProductImage.url({product.image, product}, :original)} class="h-full w-full object-cover object-center" />
                          <% else %>
                            <img
                              src="https://tailwindui.com/img/ecommerce-images/order-history-page-03-product-01.jpg"
                              alt="Moss green canvas compact backpack with double top zipper, zipper front pouch, and matching carry handle and backpack straps."
                              class="h-full w-full object-cover object-center"
                            />
                          <% end %>
                        </div>
                        <div class="ml-6 flex-1 text-sm">
                          <div class="flex flex-col font-medium text-gray-900 sm:flex-row sm:justify-between">
                            <h5 class="font-semibold uppercase">
                              <%= product.name %>
                            </h5>
                            <p class="mt-2 sm:mt-0"><%= product.price %> €</p>
                          </div>
                          <p class="hidden sm:mt-2 sm:block"><%= product.description %></p>
                        </div>
                      </div>
                      <p class="hidden sm:mt-2 sm:block">
                        Are you a minimalist looking for a compact carry option? The Micro Backpack is the perfect size for your essential everyday carry items. Wear it like a backpack or carry it like a satchel for all-day use.
                      </p>
                      <div class="mt-6 sm:flex sm:justify-between">
                        <div class="flex items-center">
                          <!-- Heroicon name: mini/check-circle -->
                          <svg class="h-5 w-5 text-green-500" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.857-9.809a.75.75 0 00-1.214-.882l-3.483 4.79-1.88-1.88a.75.75 0 10-1.06 1.061l2.5 2.5a.75.75 0 001.137-.089l4-5.5z" clip-rule="evenodd" />
                          </svg>
                          <p class="ml-2 text-sm font-medium">
                            Inserted on
                            <time datetime="2021-07-12">
                              <%= NaiveDateTime.to_string(product.updated_at) %>
                            </time>
                          </p>
                        </div>
                      </div>
                    </li>
                  <% end %>
                  <%= if order.status == :delivered do %>
                    <div class="mx-auto mb-2 flex w-full flex-col items-center justify-center sm:w-3/4 md:w-2/3 lg:w-full xl:w-full">
                      <div class="bg-[#f47c58] mt-8 flex w-9/12 rounded-lg py-2"></div>
                      <div class="flex flex-row space-x-20 lg:space-x-96 xl:space-x-96">
                        <p class="justify-start">Ordered</p>
                        <p class="">Paid</p>
                        <p class="">Delivered</p>
                      </div>
                    </div>
                  <% else %>
                    <%= if order.status == :paid do %>
                      <div class="mx-auto mb-2 flex w-full flex-col items-center justify-center sm:w-3/4 md:w-2/3 lg:w-full xl:w-full">
                        <div class="bg-grey mt-8 w-9/12 rounded-lg">
                          <div class="bg-[#f47c58] flex w-6/12 rounded-lg py-2"></div>
                        </div>
                        <div class="flex flex-row space-x-20 lg:space-x-96 xl:space-x-96">
                          <p class="justify-start">Ordered</p>
                          <p class="">Paid</p>
                          <p class="">Delivered</p>
                        </div>
                      </div>
                    <% else %>
                      <div class="mx-auto mb-2 flex w-full flex-col items-center justify-center sm:w-3/4 md:w-2/3 lg:w-full xl:w-full">
                        <div class="bg-grey mt-8 w-9/12 rounded-lg">
                          <div class="bg-[#f47c58] flex w-1/12 rounded-lg py-2 xl:w-1/5"></div>
                        </div>
                        <div class="flex flex-row space-x-20 lg:space-x-96 xl:space-x-96">
                          <p class="justify-start">Ordered</p>
                          <p class="">Paid</p>
                          <p class="">Delivered</p>
                        </div>
                      </div>
                      <%= live_redirect to: Routes.order_show_path(@socket, :show , order.id),class: "button" do %>
                        <button class="flex w-32 items-center justify-center bg-black px-2.5 py-2 text-sm font-semibold text-white shadow-sm hover:bg-[#f47c58]">
                          <span class="w-full text-center">
                            Go to order
                          </span>
                        </button>
                      <% end %>
                    <% end %>
                  <% end %>
                </ul>
              </div>
            <% end %>
          <% end %>
        <% end %>
      </div>
    </div>
  </section>
</main>
